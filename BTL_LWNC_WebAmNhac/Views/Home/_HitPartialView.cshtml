<style>
    .product-card {
        position: relative;
        margin-bottom: 20px;
        text-align: center;
    }

        .product-card .img-thumbnail {
            width: 100%;
            height: 200px; /* Điều chỉnh chiều cao tùy ý */
            object-fit: cover; /* Đảm bảo hình ảnh được cắt để phù hợp với kích thước */
        }

        .product-card .card-body {
            padding: 10px;
        }

        .product-card .card-text {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-height: 3.6em; /* Two lines of text */
            line-height: 1.8em; /* Height of one line */
        }

    .heart-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        display: none; /* Initially hidden */
        color: white;
    }

        .heart-icon.active {
            color: red; /* Active color */
        }

    .product-card:hover .heart-icon {
        display: block; /* Display when hovered */
    }
    .play-icon-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .play-icon {
        font-size: 3rem; /* Kích thước của biểu tượng play */
        color: #ffffff; /* Màu của biểu tượng play */
    }
    .play-icon-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0; /* Ẩn nút play ban đầu */
        transition: opacity 0.3s; /* Thêm hiệu ứng chuyển đổi */
    }

    .product-card:hover .play-icon-container {
        opacity: 1; /* Hiển thị nút play khi di chuột vào */
    }

    .play-icon {
        font-size: 3rem; /* Kích thước của biểu tượng play */
        color: #ffffff; /* Màu của biểu tượng play */
    }
</style>

