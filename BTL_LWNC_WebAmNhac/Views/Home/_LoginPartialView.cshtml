<div class="modal-dialog d-flex justify-content-center">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Đăng nhập</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <input type="email" class="form-control" id="email" required />
            </div>
            <div class="form-group">
                <label class="form-label" for="password">Mật khẩu</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="password" />
                    <span class="input-group-append">
                        <button id="showPasswordBtn" class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-eye"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Huỷ bỏ</button>
            <button type="button" class="btn btn-primary btn-block" id="submit__login">Đăng nhập</button>
        </div>
    </div>
</div>